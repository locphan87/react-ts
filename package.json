{
  "name": "react-ts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "autoprefixer": "9.2.0",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "babel-preset-react-app": "^5.0.4",
    "case-sensitive-paths-webpack-plugin": "2.1.2",
    "chalk": "1.1.3",
    "css-loader": "1.0.0",
    "date-fns": "1.29.0",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.2.0",
    "emotion": "9.2.12",
    "emotion-theming": "9.2.9",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "2.0.0",
    "fork-ts-checker-webpack-plugin": "^0.2.8",
    "formik": "1.3.1",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "i18n-js": "3.0.11",
    "insert-if": "1.1.0",
    "jest": "23.6.0",
    "match-values": "1.0.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-loader": "3.0.0",
    "promise": "8.0.2",
    "raf": "3.4.0",
    "ramda": "0.25.0",
    "ramda-adjunct": "2.10.0",
    "react": "^16.5.2",
    "react-dev-utils": "^5.0.2",
    "react-dom": "^16.5.2",
    "react-emotion": "9.2.12",
    "react-helmet": "5.2.0",
    "react-loadable": "5.5.0",
    "react-redux": "5.0.7",
    "react-router-dom": "4.3.1",
    "recompose": "0.30.0",
    "redux": "4.0.1",
    "redux-actions": "2.6.1",
    "redux-persist": "5.10.0",
    "reselect": "4.0.0",
    "resolve": "1.8.1",
    "source-map-loader": "^0.2.1",
    "style-loader": "0.23.1",
    "sw-precache-webpack-plugin": "0.11.5",
    "tailwindcss": "0.6.6",
    "ts-jest": "23.10.4",
    "ts-loader": "^5.2.2",
    "tsconfig-paths-webpack-plugin": "^2.0.0",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-react": "^3.2.0",
    "type-to-reducer": "1.1.0",
    "uglifyjs-webpack-plugin": "1.2.5",
    "url-loader": "1.1.2",
    "validate-commit": "3.4.0",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.11.3",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}'",
    "typecheck": "tsc --project tsconfig.json --noEmit --skipLibCheck",
    "lint": "tslint --project tsconfig.json --config tslint.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "analyze": "source-map-explorer build/static/js/main.*",
    "setup": "make setup",
    "start": "make start",
    "build": "make build-static",
    "build:css": "make build-css",
    "test": "node scripts/test.js --env=jsdom",
    "commitmsg": "validate-commit-msg",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^4.0.0-alpha.25",
    "@storybook/addon-links": "^4.0.0-alpha.25",
    "@storybook/addons": "^4.0.0-alpha.25",
    "@storybook/react": "^4.0.0-alpha.25",
    "@types/i18n-js": "3.0.1",
    "@types/jest": "23.3.5",
    "@types/ramda": "^0.25.39",
    "@types/react": "16.4.17",
    "@types/react-dom": "16.0.9",
    "@types/react-helmet": "^5.0.7",
    "@types/react-loadable": "^5.4.1",
    "@types/react-redux": "^6.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/recompose": "^0.27.0",
    "@types/redux-actions": "^2.3.1",
    "@types/storybook__react": "^3.0.9",
    "awesome-typescript-loader": "^5.2.1",
    "babel-plugin-emotion": "9.2.11",
    "babel-plugin-tailwind-components": "0.5.10",
    "husky": "1.1.2",
    "lint-staged": "7.3.0",
    "prettier": "1.14.3",
    "source-map-explorer": "1.6.0",
    "tslint-config-airbnb": "5.11.0",
    "typescript": "3.1.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "yarn lint:fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ],
    "env": {
      "production": {
        "plugins": [
          [
            "emotion",
            {
              "hoist": true
            }
          ]
        ]
      },
      "development": {
        "plugins": [
          [
            "emotion",
            {
              "sourceMap": true,
              "autoLabel": true
            }
          ]
        ]
      }
    },
    "plugins": [
      [
        "tailwind-components",
        {
          "config": "./src/theme/tailwind.js",
          "format": "auto"
        }
      ]
    ]
  }
}
